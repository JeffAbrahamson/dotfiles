apt-refresh() {
    sudo apt-get update && \
	sudo apt-get upgrade -y && \
	sudo apt-get dist-upgrade -y && \
	sudo apt-get autoremove -y;
}

minutes() {
    minute_=0;
    while true; do
	echo -n "$minute_  ";
	sleep 60;
	minute_=$((minute_ + 1));
    done;
}

