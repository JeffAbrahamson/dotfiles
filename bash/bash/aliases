# Trouver compte par numéro.
unacc() {
    grep -iE "^C;$1" $HOME/work/UNA/comite-directeur/trésorier/ebp-compta-exports/EBP.EDI | \
	awk -F';' '{printf("%s | %-12s | %-50s | %s\n", $1, $2, $3, $4);}';
}

# Trouver compte par text libre.
unacct() {
    grep -iE "^C;.*$1" $HOME/work/UNA/comite-directeur/trésorier/ebp-compta-exports/EBP.EDI | \
	awk -F';' '{printf("%s | %-12s | %-50s | %s\n", $1, $2, $3, $4);}';
}

# Trouver écriture par texte libre.
# Les champs 6 et 10 sont toujours vide pour nous.
# Le champs 11 est le lettrage.  Je m'en fiche.
OLD_unace() {
    grep -iE "^E;.*$1" $HOME/work/UNA/comite-directeur/trésorier/ebp-compta-exports/EBP.EDI | \
	 awk -F';' '{printf("%s %-10s  %8s  %2s | %-25s | %-45s | %s | %10.2f\n", $1, $2, $3, $4, $5, $7, $8, $9); }';
}

unace() {
    grep -i "$1" $HOME/work/UNA/comite-directeur/trésorier/ebp-compta-exports/export.txt | \
	 tr -d '"' | \
	 awk -F';' '{printf("%8s  %-10s %10.2f  %s | %-20s | %-45s | %-s\n", $4, $5, $13, $15, $7, $9, $10); }';
}

