	-notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 30 seconds'" \
	-notify 10 \
	-notifier "notify-send -u critical -t 3000 -- 'LOCKING screen in 10 seconds'" \
	-notify 5 \
	-notifier "notify-send -u critical -t 3000 -- 'LOCKING screen in 10 seconds'" &
