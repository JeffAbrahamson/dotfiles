defnonblock on
defutf8 on

## Control-^ (usually Control-Shift-6) is traditional and the only key not used by emacs
escape ^^^^
#
## do not trash BackSpace, usually DEL
bindkey -k kb
bindkey -d -k kb
#
## do not trash Delete, usually ESC [ 3 ~
bindkey -k kD
bindkey -d -k kD

caption always "%3n %t%=%Y-%m-%d %c:%s"
screen 0
screen $SHELL -c 'screen -X caption always "%{b}$STY %{+b g}%t(%n)%{-b b}%=%Y-%m-%d %c:%s"'
