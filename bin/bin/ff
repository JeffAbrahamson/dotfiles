#!/bin/bash

# Handy shortcuts for launching firefox.
request="$1"
case "$request" in
    ja)
	profile=jeff
    ;;
    social)
	profile=social
    ;;
    tn)
	profile=tn-jeff
    ;;
    p27)
	profile=p27-jeff
    ;;
    go)
	profile=go-jeff
    ;;
    mar)
	profile=marianne
    ;;
    jbks)
	profile=jellybooks
    ;;
    test)
	profile=test
    ;;
    *)
	notify-send "No such firefox profile: '$request'."
esac
if [ "X$profile" != "X" ]; then
    firefox -P "$profile" &
fi
